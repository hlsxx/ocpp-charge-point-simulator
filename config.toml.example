[general]
debug_mode = true
server_url = "ws://localhost:3000/charge-point"
ocpp_version = "ocpp1.6"

[implicit_charge_points]
count = 5
prefix = "CP"
boot_delay_range = [100, 1000]
heartbeat_interval_range = [30, 90]
status_interval_range = [10, 60]
start_tx_after_range = [5, 15]
stop_tx_after_range = [20, 60]

# Explicitly defined charge points
[[charge_points]]
id = "CP100001"
boot_delay_ms = 500
heartbeat_interval = 60
status_interval = 10
start_tx_after = 5
stop_tx_after = 20

[[charge_points]]
id = "CP100002"
boot_delay_ms = 1000
heartbeat_interval = 30
status_interval = 15
start_tx_after = 10
stop_tx_after = 30
